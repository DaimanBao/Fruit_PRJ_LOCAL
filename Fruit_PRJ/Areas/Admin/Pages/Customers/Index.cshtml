@page
@model Fruit_Store_PRJ.Areas.Admin.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Quản lý Khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-success fw-bold m-0"><i class="fa-solid fa-users me-2"></i>Quản lý Khách hàng</h2>
        <p class="text-muted small mb-0">Theo dõi thông tin và lịch sử mua hàng của khách</p>
    </div>
    <button class="btn btn-primary shadow-sm">
        <i class="fa-solid fa-user-plus me-1"></i> Thêm khách hàng mới
    </button>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-primary border-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary-subtle text-primary rounded-3 p-3 me-3">
                    <i class="fa-solid fa-users-viewfinder fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">Tổng khách hàng</div>
                    <div class="h5 fw-bold mb-0">1,250</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-info border-4">
            <div class="d-flex align-items-center">
                <div class="bg-info-subtle text-info rounded-3 p-3 me-3">
                    <i class="fa-solid fa-user-plus fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">Khách hàng mới</div>
                    <div class="h5 fw-bold mb-0">48</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-warning border-4">
            <div class="d-flex align-items-center">
                <div class="bg-warning-subtle text-warning rounded-3 p-3 me-3">
                    <i class="fa-solid fa-crown fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">VIP (Gold)</div>
                    <div class="h5 fw-bold mb-0">85</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-secondary border-4">
            <div class="d-flex align-items-center">
                <div class="bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                    <i class="fa-solid fa-medal fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">Thân thiết (Silver)</div>
                    <div class="h5 fw-bold mb-0">312</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                    <input type="text" class="form-control border-start-0" placeholder="Tìm theo tên, số điện thoại hoặc email...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Tất cả nhóm khách</option>
                    <option>Khách hàng mới</option>
                    <option>Thân thiết (Silver)</option>
                    <option>VIP (Gold)</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option selected>Sắp xếp theo</option>
                    <option>Tổng chi tiêu giảm dần</option>
                    <option>Đơn hàng gần nhất</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Lọc kết quả</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3">Khách hàng</th>
                        <th>Liên hệ</th>
                        <th class="text-center">Số đơn hàng</th>
                        <th class="text-end">Tổng chi tiêu</th>
                        <th class="text-center">Nhóm khách</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold me-3" style="width: 40px; height: 40px;">
                                    NA
                                </div>
                                <div>
                                    <div class="fw-bold">Nguyễn Văn An</div>
                                    <small class="text-muted">ID: #CUS-001</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="small"><i class="fa-solid fa-phone me-1 text-muted"></i> 090.123.4567</div>
                            <div class="small"><i class="fa-solid fa-envelope me-1 text-muted"></i> an.nguyen@email.com</div>
                        </td>
                        <td class="text-center fw-bold">12</td>
                        <td class="text-end fw-bold text-success">5.450.000đ</td>
                        <td class="text-center">
                            <span class="badge bg-warning-subtle text-warning border border-warning px-3">VIP (Gold)</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-page="CustomerDetail" asp-route-id="1" class="btn btn-sm btn-outline-primary" title="Sửa thông tin" >
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <button class="btn btn-sm btn-outline-secondary" title="Lịch sử mua hàng">
                                    <i class="fa-solid fa-clock-rotate-left"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" title="Khóa tài khoản">
                                    <i class="fa-solid fa-user-slash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold me-3" style="width: 40px; height: 40px;">
                                    TB
                                </div>
                                <div>
                                    <div class="fw-bold">Trần Thị Bình</div>
                                    <small class="text-muted">ID: #CUS-002</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="small"><i class="fa-solid fa-phone me-1 text-muted"></i> 091.999.8888</div>
                            <div class="small"><i class="fa-solid fa-envelope me-1 text-muted"></i> binh.tran@email.com</div>
                        </td>
                        <td class="text-center fw-bold">2</td>
                        <td class="text-end fw-bold text-success">850.000đ</td>
                        <td class="text-center">
                            <span class="badge bg-light text-dark border px-3">Khách hàng mới</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-clock-rotate-left"></i></a>
                                <button class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-pen"></i></button>
                                <button class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-user-slash"></i></button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <span class="small text-muted">Hiển thị 10 / 150 khách hàng</span>
            <ul class="pagination pagination-sm m-0">
                <li class="page-item disabled"><a class="page-link shadow-none">Trước</a></li>
                <li class="page-item active"><a class="page-link shadow-none">1</a></li>
                <li class="page-item"><a class="page-link shadow-none">2</a></li>
                <li class="page-item"><a class="page-link shadow-none">Sau</a></li>
            </ul>
        </div>
    </div>
</div>