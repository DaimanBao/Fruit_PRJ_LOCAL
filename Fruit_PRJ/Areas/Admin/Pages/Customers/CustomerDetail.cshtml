@page
@model Fruit_Store_PRJ.Areas.Admin.Pages.Customers.CustomerDetailModel

@{
    ViewData["Title"] = "Chi tiết khách hàng - Nguyễn Văn An";
   
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
        <i class="fa-solid fa-chevron-left me-1"></i> Danh sách khách hàng
    </a>
    <div class="d-flex gap-2">
        <button class="btn btn-sm btn-outline-danger">
            <i class="fa-solid fa-user-slash me-1"></i> Khóa tài khoản
        </button>
        <button class="btn btn-sm btn-primary px-3">
            <i class="fa-solid fa-user-pen me-1"></i> Chỉnh sửa thông tin
        </button>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body text-center pt-5">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow" style="width: 100px; height: 100px; font-size: 2.5rem;">
                    NA
                </div>
                <h4 class="fw-bold mb-1">Nguyễn Văn An</h4>
                <p class="text-muted small mb-3">Thành viên từ: 15/05/2025</p>
                <span class="badge bg-warning-subtle text-warning border border-warning px-3 py-2">
                    <i class="fa-solid fa-crown me-1"></i> Khách hàng VIP (Gold)
                </span>
            </div>
            <hr class="mx-4 my-0">
            <div class="card-body">
                <h6 class="text-uppercase small fw-bold text-muted mb-3">Thông tin liên hệ</h6>
                <div class="d-flex mb-3">
                    <div class="flex-shrink-0 text-muted"><i class="fa-solid fa-envelope w-25p"></i></div>
                    <div class="ms-3 small text-break">an.nguyen@email.com</div>
                </div>
                <div class="d-flex mb-3">
                    <div class="flex-shrink-0 text-muted"><i class="fa-solid fa-phone w-25p"></i></div>
                    <div class="ms-3 small">090.123.4567</div>
                </div>
                <div class="d-flex mb-0">
                    <div class="flex-shrink-0 text-muted"><i class="fa-solid fa-location-dot w-25p"></i></div>
                    <div class="ms-3 small">456 Lê Lợi, P.1, Q.1, TP. Hồ Chí Minh</div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-6">
                <div class="card border-0 shadow-sm text-center p-3">
                    <div class="text-muted small text-uppercase fw-bold">Tổng đơn</div>
                    <div class="h4 fw-bold text-primary mb-0">24</div>
                </div>
            </div>
            <div class="col-6">
                <div class="card border-0 shadow-sm text-center p-3">
                    <div class="text-muted small text-uppercase fw-bold">Chi tiêu</div>
                    <div class="h4 fw-bold text-success mb-0">15.2M</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3 border-bottom-0">
                <h5 class="fw-bold mb-0"><i class="fa-solid fa-clock-rotate-left me-2 text-info"></i>Lịch sử đơn hàng</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light small text-uppercase">
                            <tr>
                                <th class="ps-4">Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th class="text-end pe-4">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="ps-4 fw-bold text-primary">#INV-8801</td>
                                <td class="small">04/01/2026</td>
                                <td class="fw-bold">450.000đ</td>
                                <td><span class="badge bg-success-subtle text-success">Hoàn thành</span></td>
                                <td class="text-end pe-4">
                                    <a asp-page="/Orders/OrderDetail" class="btn btn-sm btn-light border shadow-sm">Chi tiết</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold text-primary">#INV-8750</td>
                                <td class="small">28/12/2025</td>
                                <td class="fw-bold">1.200.000đ</td>
                                <td><span class="badge bg-success-subtle text-success">Hoàn thành</span></td>
                                <td class="text-end pe-4">
                                    <a href="#" class="btn btn-sm btn-light border shadow-sm">Chi tiết</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold text-primary">#INV-8600</td>
                                <td class="small">15/12/2025</td>
                                <td class="fw-bold">350.000đ</td>
                                <td><span class="badge bg-danger-subtle text-danger">Đã hủy</span></td>
                                <td class="text-end pe-4">
                                    <a href="#" class="btn btn-sm btn-light border shadow-sm">Chi tiết</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-top-0 py-3 text-center">
                <a href="#" class="small fw-bold text-decoration-none text-primary">Xem tất cả lịch sử mua hàng</a>
            </div>
        </div>
    </div>
</div>

<style>
    .w-25p { width: 25px; text-align: center; }
</style>