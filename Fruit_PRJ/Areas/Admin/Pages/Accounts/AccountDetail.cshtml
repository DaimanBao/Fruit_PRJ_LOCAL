@page "/account-detail/{id:int?}"
@model Fruit_PRJ.Areas.Admin.Pages.Accounts.AccountDetailModel
@{
    ViewData["Title"] = "Chi tiết Tài khoản";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-page="Index" class="btn btn-sm btn-outline-secondary shadow-sm">
        <i class="fa-solid fa-chevron-left me-1"></i> Quay lại danh sách
    </a>
    <div class="d-flex gap-2">
        <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@Model.account.Id" class="d-inline">
            <button type="submit"
                    class="btn btn-sm btn-white border @(Model.account.IsActive ? "text-danger" : "text-success")"
                    title="@(Model.account.IsActive ? "Khóa" : "Mở khóa")">
                <i class="fa-solid @(Model.account.IsActive ? "fa-lock" : "fa-lock-open")"></i> @(Model.account.IsActive ? "Khóa tài khoản" : "Mở khóa tài khoản")

            </button>
        </form>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-4 text-center overflow-hidden">
            <div class="bg-success" style="height: 60px;"></div>
            <div class="card-body pt-0" style="margin-top: -40px;">
                <div class="position-relative d-inline-block mb-3">
                    <img src="https://ui-avatars.com/api/?name=@Model.account.Username&background=0D6EFD&color=fff&size=128"
                         class="rounded-circle shadow border border-4 border-white" width="100" height="100">
                    <span class="position-absolute bottom-0 end-0 bg-@Model.GetAccountStatusClass(Model.account.IsActive) border border-2 border-white rounded-circle p-2" title="@(Model.GetAccountStatusText(Model.account.IsActive))"></span>
                </div>
                <h5 class="fw-bold mb-1">@Model.account.Username</h5>
                <span class="badge bg-@Model.GetAccountRoleClass(Model.account.Role)-subtle text-@Model.GetAccountRoleClass(Model.account.Role) px-3 py-2 rounded-pill border border-@Model.GetAccountRoleClass(Model.account.Role) mb-3">@Model.GetAccountRoleText(Model.account.Role)</span>

                <div class="row g-2 mt-2">
                    <div class="col-6">
                        <div class="p-2 bg-light rounded-3 text-start">
                            <div class="text-muted" style="font-size: 0.65rem;">NGÀY TẠO</div>
                            <div class="fw-bold small">@Model.account.CreatedAt</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded-3 text-start">
                            <div class="text-muted" style="font-size: 0.65rem;">TRẠNG THÁI</div>
                            <div class="fw-bold small text-@Model.GetAccountStatusClass(Model.account.IsActive)">@Model.GetAccountStatusText(Model.account.IsActive)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h6 class="fw-bold text-uppercase small mb-3 text-secondary">Thông tin liên hệ</h6>
                <div class="mb-3">
                    <label class="text-muted small d-block">Địa chỉ Email</label>
                    <span class="fw-bold small">@Model.account.Email</span>
                </div>
                <div class="mb-3">
                    <label class="text-muted small d-block">Số điện thoại</label>
                    <span class="fw-bold small">@Model.account.Phone</span>
                </div>
                <div class="mb-0">
                    <label class="text-muted small d-block">Địa chỉ đăng ký</label>
                    <span class="fw-bold small">@Model.account.Address</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3 border-bottom-0">
                <ul class="nav nav-pills card-header-pills border-0" id="accountTab" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active fw-bold small" data-bs-toggle="tab" data-bs-target="#profile">
                            <i class="fa-solid fa-user-gear me-2"></i>Hồ sơ chi tiết
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link fw-bold small" data-bs-toggle="tab" data-bs-target="#security">
                            <i class="fa-solid fa-shield-halved me-2"></i>Bảo mật
                        </button>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <div class="tab-content" id="accountTabContent">
                    <div class="tab-pane fade show active" id="profile">
                        <form method="post" asp-page-handler="UpdateProfile" class="row g-3">
                            <input type="hidden" asp-for="NewAccount.Id" />

                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Username</label>
                                <input asp-for="NewAccount.Username" class="form-control form-control-sm shadow-none" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Vai trò hệ thống</label>
                                <select asp-for="NewAccount.Role" class="form-select form-select-sm shadow-none">
                                    <option value="1">Admin</option>
                                    <option value="2">Staff</option>
                                    <option value="3">Customer</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Email</label>
                                <input asp-for="NewAccount.Email" type="email" class="form-control form-control-sm shadow-none" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label small fw-bold">Phone</label>
                                <input asp-for="NewAccount.Phone" class="form-control form-control-sm shadow-none" />
                            </div>

                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="fa-solid fa-save me-1"></i> Lưu thay đổi
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane fade" id="security">
                        <h6 class="fw-bold small mb-3">Đổi mật khẩu nhanh</h6>
                        <form method="post" asp-page-handler="ResetPassword" class="row g-3">
                            <input type="hidden" asp-for="AccountId" />

                            <div class="col-md-6">
                                <input asp-for="NewPassword" type="password"
                                       class="form-control form-control-sm shadow-none"
                                       placeholder="Mật khẩu mới" />
                            </div>

                            <div class="col-md-6">
                                <button class="btn btn-sm btn-outline-info">Cập nhật mật khẩu</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null || Model.Message != null)
{
    <div class="offcanvas offcanvas-end show" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasLabel">Thông báo</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            @Model.Message
        </div>
    </div>
}

@section Scripts {
    <style>
        .nav-pills .nav-link {
            color: #6c757d;
            border-radius: 8px;
            padding: 10px 15px;
        }

            .nav-pills .nav-link.active {
                background-color: #e9ecef;
                color: #198754;
            }

        .form-control-sm, .form-select-sm {
            border-color: #eee;
        }

            .form-control-sm:focus {
                border-color: #198754;
            }
    </style>
}