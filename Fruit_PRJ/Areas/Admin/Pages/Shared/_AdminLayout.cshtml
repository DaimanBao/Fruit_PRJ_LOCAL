<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Fruit Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/AdminSite.css" asp-append-version="true" />
</head>
<body>

    <nav id="admin-sidebar" class="d-flex flex-column">
        <div class="sidebar-header">
            <h4 class="m-0"><i class="fa-solid fa-leaf me-2"></i>Fruit Admin</h4>
        </div>

        <div class="p-3 text-center border-bottom border-secondary mb-2">
            <img src="https://ui-avatars.com/api/?name=Admin+User&background=2ecc71&color=fff" class="rounded-circle mb-2" width="60">
            <p class="small mb-0 text-white">Xin chào, Quản trị viên</p>
        </div>

        <ul class="nav nav-pills flex-column mb-auto overflow-auto">
            <li class="nav-item">
                <a asp-page="/Index" class="nav-link active">
                    <i class="fa-solid fa-chart-line me-2"></i> Tổng quan
                </a>
            </li>
            <li>
                <a asp-page="/Products/Index" class="nav-link">
                    <i class="fa-solid fa-box me-2"></i> Quản lý Sản phẩm
                </a>
            </li>
            <li>
                <a asp-page="/Orders/Index" class="nav-link">
                    <i class="fa-solid fa-cart-shopping me-2"></i> Đơn hàng
                </a>
            </li>
            <li>
                <a asp-page="/Accounts/Index" class="nav-link">
                    <i class="fa-solid fa-users me-2"></i> Account
                </a>
            </li>
            <li class="mt-2">
                <a href="/" class="nav-link text-warning">
                    <i class="fa-solid fa-arrow-left me-2"></i> Xem Website
                </a>
            </li>
        </ul>

        <div class="p-3 border-top border-secondary">
            <form method="get" asp-page="/Logout">
                <button type="submit" class="btn btn-outline-danger w-100">
                    <i class="fa-solid fa-right-from-bracket me-2"></i> Đăng xuất
                </button>
            </form>
        </div>
    </nav>

    <div id="admin-content" class="d-flex flex-column min-vh-100">

        <header class="admin-navbar shadow-sm">
            <h5 class="m-0 text-dark">@ViewData["Title"]</h5>
            <div class="user-menu">
                <span class="me-3 small text-muted">Hôm nay: @DateTime.Now.ToString("dd/MM/yyyy")</span>
            </div>
        </header>

        <main class="p-4 flex-grow-1">
            @RenderBody()
        </main>

        <footer class="admin-footer bg-white text-muted">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <span>&copy; 2026 - Hệ thống Quản trị <strong>FruitFresh</strong></span>
                <span class="badge bg-light text-dark border">Phiên bản 2.0.1</span>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>