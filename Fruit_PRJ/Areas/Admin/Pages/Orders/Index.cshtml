@page
@model Fruit_Store_PRJ.Areas.Admin.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Quản lý Hóa đơn";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-success fw-bold m-0"><i class="fa-solid fa-file-invoice-dollar me-2"></i>Quản lý Đơn hàng</h2>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-dark shadow-sm"><i class="fa-solid fa-file-export me-1"></i> Xuất Excel</button>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-primary border-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary-subtle text-primary rounded-3 p-3 me-3"><i class="fa-solid fa-cart-shopping fs-4"></i></div>
                <div>
                    <div class="text-muted small fw-bold">Tổng đơn hàng</div>
                    <div class="h5 fw-bold mb-0">@Model.Stats["Total"]</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-warning border-4">
            <div class="d-flex align-items-center">
                <div class="bg-warning-subtle text-warning rounded-3 p-3 me-3"><i class="fa-solid fa-clock-rotate-left fs-4"></i></div>
                <div>
                    <div class="text-muted small fw-bold">Chờ xử lý</div>
                    <div class="h5 fw-bold mb-0">@Model.Stats["Pending"]</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-info border-4">
            <div class="d-flex align-items-center">
                <div class="bg-info-subtle text-info rounded-3 p-3 me-3"><i class="fa-solid fa-truck-fast fs-4"></i></div>
                <div>
                    <div class="text-muted small fw-bold">Đang giao</div>
                    <div class="h5 fw-bold mb-0">@Model.Stats["Shipping"]</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-success border-4">
            <div class="d-flex align-items-center">
                <div class="bg-success-subtle text-success rounded-3 p-3 me-3"><i class="fa-solid fa-circle-check fs-4"></i></div>
                <div>
                    <div class="text-muted small fw-bold">Hoàn thành</div>
                    <div class="h5 fw-bold mb-0">@Model.Stats["Completed"]</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Thanh toán</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">#@item.OrderCode</td>
                            <td>
                                <div class="fw-bold">@item.CustomerName</div>
                                <small class="text-muted">@item.CustomerPhone</small>
                            </td>
                            <td class="small">@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="fw-bold">@item.TotalAmount.ToString("N0")đ</td>
                            <td>
                                @if (item.PaymentMethod == 1)
                                {
                                    <span class="badge bg-secondary-subtle text-dark border">COD</span>
                                }
                                else
                                {

                                    <span class="badge bg-info-subtle text-info border border-info">Online</span>
                                }
                            </td>
                            <td>
                                @switch (item.Status)
                                {
                                    case 1:
                                        <span class="badge bg-warning-subtle text-warning border border-warning">Chờ xử lý</span>
                                        break;
                                    case 2:

                                        <span class="badge bg-primary-subtle text-primary border border-primary">Đang giao</span>
                                        break;
                                    case 3:

                                        <span class="badge bg-success-subtle text-success border border-success">Hoàn thành</span>
                                        break;
                                    case 4:

                                        <span class="badge bg-danger-subtle text-danger border border-danger">Đã hủy</span>
                                        break;
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-page="OrderDetail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>

                                    @if (item.Status == 1)
                                    {
                                        <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@item.Id" asp-route-status="2" style="display:inline;">
                                            <button class="btn btn-sm btn-outline-success" title="Duyệt đơn"><i class="fa-solid fa-check"></i></button>
                                        </form>
                                        <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@item.Id" asp-route-status="4" style="display:inline;">
                                            <button class="btn btn-sm btn-outline-danger" title="Hủy đơn"><i class="fa-solid fa-xmark"></i></button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>