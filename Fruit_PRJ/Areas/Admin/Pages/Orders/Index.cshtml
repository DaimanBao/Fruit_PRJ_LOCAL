@page
@model Fruit_Store_PRJ.Areas.Admin.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Quản lý Hóa đơn";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-success fw-bold m-0"><i class="fa-solid fa-file-invoice-dollar me-2"></i>Danh sách Hóa đơn</h2>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-dark shadow-sm">
            <i class="fa-solid fa-file-export me-1"></i> Xuất Excel
        </button>
        <button class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-print me-1"></i> In báo cáo
        </button>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-primary border-4">
            <div class="d-flex align-items-center">
                <div class="bg-primary-subtle text-primary rounded-3 p-3 me-3">
                    <i class="fa-solid fa-cart-shopping fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">Tổng đơn hàng</div>
                    <div class="h5 fw-bold mb-0">1,250</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-warning border-4">
            <div class="d-flex align-items-center">
                <div class="bg-warning-subtle text-warning rounded-3 p-3 me-3">
                    <i class="fa-solid fa-clock-rotate-left fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">Chờ xác nhận</div>
                    <div class="h5 fw-bold mb-0">15</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-info border-4">
            <div class="d-flex align-items-center">
                <div class="bg-info-subtle text-info rounded-3 p-3 me-3">
                    <i class="fa-solid fa-truck-fast fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">Đang giao</div>
                    <div class="h5 fw-bold mb-0">24</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm p-3 border-start border-success border-4">
            <div class="d-flex align-items-center">
                <div class="bg-success-subtle text-success rounded-3 p-3 me-3">
                    <i class="fa-solid fa-circle-check fs-4"></i>
                </div>
                <div>
                    <div class="text-muted small fw-bold">Hoàn thành</div>
                    <div class="h5 fw-bold mb-0">1,180</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="small fw-bold text-muted">Mã hóa đơn / Khách hàng</label>
                <input type="text" class="form-control" placeholder="Tìm kiếm...">
            </div>
            <div class="col-md-4">
                <label class="small fw-bold text-muted">Trạng thái đơn hàng</label>
                <select class="form-select">
                    <option selected>Tất cả trạng thái</option>
                    <option>Chờ xác nhận</option>
                    <option>Đang giao hàng</option>
                    <option>Hoàn thành</option>
                    <option>Đã hủy</option>
                </select>
            </div>
            
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-secondary w-100">Lọc đơn</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light text-secondary">
                    <tr>
                        <th class="ps-4">Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Hẹn giao</th>
                        <th>Tổng tiền</th>
                        <th>Thanh toán</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">#INV-8801</td>
                        <td>
                            <div class="fw-bold">Nguyễn Văn An</div>
                            <small class="text-muted">090.123.4567</small>
                        </td>
                        <td>04/01/2026 09:30</td>
                        <td>
                            <div class="text-danger fw-bold">
                                <i class="fa-solid fa-calendar-day me-1"></i> Hôm nay
                                <div class="small fw-normal text-muted">04/01/2026</div>
                            </div>
                        </td>
                        <td class="fw-bold text-dark">450.000đ</td>
                        <td><span class="badge bg-info-subtle text-info border border-info">Chuyển khoản</span></td>
                        <td><span class="badge bg-warning-subtle text-warning border border-warning">Chờ xử lý</span></td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-page="OrderDetail" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="fa-solid fa-eye"></i></a>
                                <button class="btn btn-sm btn-outline-success" title="Xác nhận đơn"><i class="fa-solid fa-check"></i></button>
                                <button class="btn btn-sm btn-outline-danger" title="Hủy đơn"><i class="fa-solid fa-xmark"></i></button>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td class="ps-4 fw-bold text-primary">#INV-8799</td>
                        <td>
                            <div class="fw-bold">Trần Thị Bình</div>
                            <small class="text-muted">091.999.8888</small>
                        </td>
                        <td>03/01/2026 15:45</td>
                        <td>
                            <div class="text-dark fw-bold">
                                <i class="fa-solid fa-clock me-1 text-primary"></i> 06/01/2026
                            </div>
                        </td>
                        <td class="fw-bold text-dark">1.250.000đ</td>
                        <td><span class="badge bg-secondary-subtle text-secondary border border-secondary">COD</span></td>
                        <td><span class="badge bg-success-subtle text-success border border-success">Hoàn thành</span></td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-eye"></i></a>
                                <button class="btn btn-sm btn-outline-dark" title="In hóa đơn"><i class="fa-solid fa-print"></i></button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>