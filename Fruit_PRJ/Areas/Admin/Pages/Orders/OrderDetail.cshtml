@page
@model Fruit_Store_PRJ.Areas.Admin.Pages.Orders.OrderDetailModel
@{
    ViewData["Title"] = "Chi tiết đơn hàng #INV-8801";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
        <i class="fa-solid fa-chevron-left me-1"></i> Danh sách hóa đơn
    </a>
    <div class="d-flex gap-2">
        <button class="btn btn-sm btn-outline-dark" onclick="window.print()">
            <i class="fa-solid fa-print me-1"></i> In hóa đơn
        </button>

        <button type="button" class="btn btn-sm btn-outline-danger px-3" data-bs-toggle="modal" data-bs-target="#cancelOrderModal">
            <i class="fa-solid fa-ban me-1"></i> Hủy đơn
        </button>

        <div class="btn-group shadow-sm">
            <button type="button" class="btn btn-sm btn-success px-3">
                <i class="fa-solid fa-check-double me-1"></i> Đã giao thành công
            </button>
            <button type="button" class="btn btn-sm btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                <li><a class="dropdown-item py-2" href="#"><i class="fa-solid fa-truck-fast me-2 text-info"></i>Bắt đầu giao hàng</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item py-2 text-danger" href="#"><i class="fa-solid fa-ban me-2"></i>Hủy đơn hàng</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body py-5">
        <div class="position-relative d-flex justify-content-between">
            <div class="progress position-absolute start-0 top-50 translate-middle-y w-100" style="height: 4px; z-index: 0; transform: translateY(-15px) !important;">
                <div class="progress-bar bg-success" role="progressbar" style="width: 35%;"></div>
            </div>

            <div class="text-center position-relative" style="z-index: 1; width: 120px;">
                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow" style="width: 50px; height: 50px;">
                    <i class="fa-solid fa-file-invoice fs-5"></i>
                </div>
                <div class="small fw-bold text-dark mb-1">Đã đặt hàng</div>
                <div class="text-muted" style="font-size: 0.75rem;">09:30 04/01/2026</div>
            </div>

            <div class="text-center position-relative" style="z-index: 1; width: 120px;">
                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow" style="width: 50px; height: 50px;">
                    <i class="fa-solid fa-box fs-5"></i>
                </div>
                <div class="small fw-bold text-dark mb-1">Đã xác nhận</div>
                <div class="text-muted" style="font-size: 0.75rem;">Chờ lấy hàng</div>
            </div>

            <div class="text-center position-relative" style="z-index: 1; width: 120px;">
                <div class="bg-white text-secondary border border-3 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 50px; height: 50px;">
                    <i class="fa-solid fa-truck fs-5"></i>
                </div>
                <div class="small fw-bold text-muted mb-1">Đang giao hàng</div>
            </div>

            <div class="text-center position-relative" style="z-index: 1; width: 120px;">
                <div class="bg-white text-secondary border border-3 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 50px; height: 50px;">
                    <i class="fa-solid fa-circle-check fs-5"></i>
                </div>
                <div class="small fw-bold text-muted mb-1">Hoàn thành</div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-3 overflow-hidden position-relative">
    @* <div class="position-absolute top-50 start-50 translate-middle opacity-25 d-none d-md-block" style="transform: rotate(-15deg) !important; z-index: 0;">
        <h1 class="display-1 fw-bold text-success border border-5 border-success p-3 rounded-3" style="border-style: double !important;">ĐÃ HOÀN THÀNH</h1>
    </div> *@

    <div class="card-body p-4 p-md-5 position-relative" style="z-index: 1;">
        <div class="row mb-5">
            <div class="col-sm-6 text-center text-sm-start">
                <h3 class="text-success fw-bold mb-1 text-uppercase"><i class="fa-solid fa-leaf me-2"></i>FruitFresh</h3>
                <p class="text-muted small mb-0">Hệ thống quản lý cửa hàng trái cây sạch</p>
                <p class="text-muted small">Hotline: 1900 1234</p>
            </div>
            <div class="col-sm-6 text-center text-sm-end">
                <h2 class="fw-light text-secondary mb-0">HÓA ĐƠN</h2>
                <div class="fw-bold fs-5 text-primary">#INV-8801</div>
                <p class="text-muted small">Ngày đặt: 04/01/2026</p>
            </div>
        </div>

        <div class="row mb-5 g-4 bg-light mx-0 py-4 rounded-3 border">
            <div class="col-sm-6 col-md-4 px-4">
                <h6 class="text-muted fw-bold text-uppercase small mb-3">Người mua hàng</h6>
                <div class="fw-bold fs-6">Nguyễn Văn An</div>
                <div class="text-muted small mt-1"><i class="fa-solid fa-phone me-1"></i> 090.123.4567</div>
                <div class="text-muted small"><i class="fa-solid fa-envelope me-1"></i> an.nguyen@email.com</div>
            </div>
            <div class="col-sm-6 col-md-4 px-4 border-sm-start">
                <h6 class="text-muted fw-bold text-uppercase small mb-3">Thông tin giao nhận</h6>
                <div class="text-dark mb-1">456 Lê Lợi, Phường 1, Quận 1, TP. HCM</div>

                <div class="mt-2 p-2 bg-white rounded border border-warning shadow-sm">
                    <small class="text-muted d-block fw-bold" style="font-size: 0.65rem;">NGÀY GIAO DỰ KIẾN:</small>
                    <div class="text-danger fw-bold">
                        <i class="fa-solid fa-calendar-day me-1"></i> 05/01/2026
                        <small class="fw-normal">(Trong vòng 24h tới)</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 px-4 border-md-start">
                <h6 class="text-muted fw-bold text-uppercase small mb-3">Trạng thái hiện tại</h6>
                <div class="mb-1"><span class="badge bg-info-subtle text-info border border-info px-3">Đã xác nhận đơn</span></div>
                <div class="small"><span class="text-muted">Thanh toán:</span> <b class="text-dark">Chuyển khoản</b></div>
                <div class="small"><span class="text-muted">Vận chuyển:</span> <b class="text-dark">Shopee Express</b></div>
            </div>
        </div>

        <div class="table-responsive mb-4">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr class="text-uppercase small fw-bold text-secondary border-top border-bottom">
                        <th class="py-3 ps-3">Sản phẩm</th>
                        <th class="py-3 text-center">Đơn giá</th>
                        <th class="py-3 text-center">Số lượng</th>
                        <th class="py-3 text-end pe-3">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="py-3 ps-3">
                            <div class="d-flex align-items-center">
                                <img src="https://placehold.co/40x40/orange/white?text=C" class="rounded me-3 border" alt="">
                                <div>
                                    <div class="fw-bold">Cam Sành Tiền Giang</div>
                                    <small class="text-muted">Mã: FR-001</small>
                                </div>
                            </div>
                        </td>
                        <td class="py-3 text-center text-muted">35.000đ</td>
                        <td class="py-3 text-center fw-bold">5 kg</td>
                        <td class="py-3 text-end pe-3 fw-bold text-dark">175.000đ</td>
                    </tr>
                    <tr>
                        <td class="py-3 ps-3">
                            <div class="d-flex align-items-center">
                                <img src="https://placehold.co/40x40/red/white?text=T" class="rounded me-3 border" alt="">
                                <div>
                                    <div class="fw-bold">Táo Envy Mỹ</div>
                                    <small class="text-muted">Mã: FR-002</small>
                                </div>
                            </div>
                        </td>
                        <td class="py-3 text-center text-muted">150.000đ</td>
                        <td class="py-3 text-center fw-bold">2 kg</td>
                        <td class="py-3 text-end pe-3 fw-bold text-dark">300.000đ</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row justify-content-end">
            <div class="col-md-5 col-lg-4">
                <div class="card bg-light border-0">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Tạm tính:</span>
                            <span>475.000đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Phí vận chuyển:</span>
                            <span>25.000đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 text-danger">
                            <span class="text-muted">Giảm giá:</span>
                            <span>-50.000đ</span>
                        </div>
                        <hr class="mt-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 fw-bold mb-0">TỔNG CỘNG:</span>
                            <span class="h4 fw-bold text-success mb-0">450.000đ</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 p-3 border-start border-4 border-warning bg-warning-subtle rounded-end">
            <h6 class="fw-bold mb-1 small text-uppercase text-warning-emphasis"><i class="fa-solid fa-comment-dots me-2"></i>Ghi chú của khách hàng:</h6>
            <p class="mb-0 text-dark small italic">"Giao hàng giờ hành chính giúp mình nhé, cảm ơn shop!"</p>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        @@media print {
            #admin-sidebar, .admin-navbar, .admin-footer, .btn, .btn-group, .mb-4:first-child {
                display: none !important;
            }

            #admin-content {
                margin-left: 0 !important;
                padding: 0 !important;
            }

            .card {
                border: 1px solid #ddd !important;
                box-shadow: none !important;
            }

            .bg-light {
                background-color: #f8f9fa !important;
                -webkit-print-color-adjust: exact;
            }

            .badge {
                border: 1px solid #000 !important;
                color: #000 !important;
            }
        }
    </style>
}