@page
@model Fruit_Store_PRJ.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Bảng điều khiển Admin";
}

<div class="container-fluid p-0">
    <div class="mb-4">
        <h3 class="fw-bold">Tổng quan hệ thống</h3>
        <p class="text-muted">Chào mừng bạn trở lại, hệ thống đang vận hành ổn định.</p>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 bg-primary text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase small">Tổng doanh thu</h6>
                            <h3 class="mb-0 fw-bold">@Model.TotalRevenue.ToString("N0")đ</h3>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded p-3">
                            <i class="fa-solid fa-sack-dollar fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small">Đơn hàng</h6>
                            <h3 class="mb-0 fw-bold">@Model.OrderStats["Total"]</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 text-success rounded p-3">
                            <i class="fa-solid fa-cart-shopping fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3 small">
                        <span class="text-warning"><i class="fa-solid fa-clock me-1"></i>@Model.OrderStats["Pending"] chờ xử lý</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small">Khách hàng</h6>
                            <h3 class="mb-0 fw-bold">@Model.AccountStats.Total</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 text-info rounded p-3">
                            <i class="fa-solid fa-users fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3 small">
                        <span class="text-success"><i class="fa-solid fa-circle me-1"></i>@Model.AccountStats.Active đang hoạt động</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small">Sản phẩm</h6>
                            <h3 class="mb-0 fw-bold">@Model.ProductStats.Total</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 text-warning rounded p-3">
                            <i class="fa-solid fa-box-open fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3 small">
                        <span class="text-danger"><i class="fa-solid fa-triangle-exclamation me-1"></i>@Model.ProductStats.OutOfStock hết hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Đơn hàng mới nhất</h5>
                    <a asp-page="/Orders/Index" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr class="small text-uppercase text-muted">
                                <th class="ps-4">Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th class="text-end pe-4">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@order.OrderCode</td>
                                    <td>
                                        <div class="fw-bold">@order.CustomerName</div>
                                        <small class="text-muted">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>@order.TotalAmount.ToString("N0")đ</td>
                                    <td>
                                        @if (order.Status == 1)
                                        {
                                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                        }
                                        else if (order.Status == 2)
                                        {

                                            <span class="badge bg-info">Đang giao</span>
                                        }
                                        else if (order.Status == 3)
                                        {

                                            <span class="badge bg-success">Hoàn thành</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-danger">Đã hủy</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-page="/Orders/OrderDetail" asp-route-id="@order.Id" class="btn btn-sm btn-light border">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Tình trạng kho hàng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small">Đang kinh doanh</span>
                            <span class="fw-bold small">@Model.ProductStats.Selling</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: @(Model.ProductStats.Total > 0 ? (Model.ProductStats.Selling * 100 / Model.ProductStats.Total) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small">Hết hàng</span>
                            <span class="fw-bold small">@Model.ProductStats.OutOfStock</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-danger" style="width: @(Model.ProductStats.Total > 0 ? (Model.ProductStats.OutOfStock * 100 / Model.ProductStats.Total) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small">Ngừng kinh doanh</span>
                            <span class="fw-bold small">@Model.ProductStats.StopSelling</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-secondary" style="width: @(Model.ProductStats.Total > 0 ? (Model.ProductStats.StopSelling * 100 / Model.ProductStats.Total) : 0)%"></div>
                        </div>
                    </div>

                    <hr />

                    <div class="text-center mt-3">
                        <p class="text-muted small">Thông tin dựa trên danh mục sản phẩm hiện có.</p>
                        <a asp-page="/Products/Index" class="btn btn-sm btn-dark w-100">Quản lý kho</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>