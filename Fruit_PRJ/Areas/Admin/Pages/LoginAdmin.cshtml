@page
@model Fruit_PRJ.Areas.Admin.Pages.LoginAdminModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập hệ thống - FruitFresh</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #f6f9fc 0%, #e9f2f9 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

        .login-logo {
            color: #198754;
            font-size: 2rem;
            font-weight: 800;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .form-control {
            padding: 0.75rem 1rem;
            border-radius: 10px;
            border: 1px solid #dee2e6;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #198754;
                box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.1);
            }

        .btn-login {
            padding: 0.75rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .fake-link {
            color: #6c757d;
            text-decoration: none;
            font-size: 0.85rem;
            cursor: pointer;
            transition: color 0.2s;
        }

            .fake-link:hover {
                color: #198754;
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="login-card card mx-auto">
            <div class="card-body p-5">
                <div class="login-logo">
                    <i class="fa-solid fa-leaf me-2"></i>FruitFresh
                </div>
                <h5 class="text-center text-muted mb-4 small fw-bold text-uppercase">Hệ thống Quản trị</h5>

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Email quản trị</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="fa-solid fa-envelope"></i></span>
                            <input type="email" class="form-control border-start-0 ps-0 shadow-none" placeholder="admin@fruitfresh.com" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">Mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="fa-solid fa-lock"></i></span>
                            <input type="password" class="form-control border-start-0 ps-0 shadow-none" placeholder="••••••••" required>
                        </div>
                    </div>

                    <div class="mb-4 text-end">
                        <span class="fake-link" data-bs-toggle="modal" data-bs-target="#SupportModal">
                            Quên mật khẩu hoặc cần hỗ trợ?
                        </span>
                    </div>

                    <button type="submit" class="btn btn-success w-100 btn-login shadow-sm">
                        Đăng nhập ngay <i class="fa-solid fa-arrow-right-to-bracket ms-2"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="SupportModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-light border-0">
                    <h6 class="modal-title fw-bold"><i class="fa-solid fa-headset me-2 text-success"></i>Hỗ trợ truy cập</h6>
                    <button type="button" class="btn-close shadow-none" style="font-size: 0.7rem;" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <p class="small text-muted mb-0">Vui lòng liên hệ bộ phận kỹ thuật để cấp lại mật khẩu.</p>
                    <div class="fw-bold fs-5 text-success my-2">1900 1234</div>
                    <div class="small text-muted">Hoặc email: <span class="text-primary">tech@fruitfresh.com</span></div>
                </div>
                <div class="modal-footer border-0 p-2">
                    <button type="button" class="btn btn-sm btn-secondary w-100" data-bs-dismiss="modal">Đã hiểu</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>