@page
@model Fruit_PRJ.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container py-5">

    <h2 class="mb-4 text-success fw-bold">
        🛒 Giỏ hàng của bạn
    </h2>

    @if (!Model.CartItems.Any())
    {
        <div class="alert alert-info">
            Giỏ hàng đang trống.
        </div>

        <a asp-page="/Index" class="btn btn-success">
            ← Tiếp tục mua sắm
        </a>
    }
    else
    {
        <table class="table align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th width="150">Số lượng</th>
                    <th>Tổng</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@item.Image" width="60" class="rounded me-3" />
                                <strong>@item.Name</strong>
                            </div>
                        </td>

                        <td class="text-danger fw-bold">
                            @item.Price.ToString("N0") đ
                        </td>

                        <td>
                            <div class="d-flex gap-1">
                                <form method="post" asp-page-handler="Decrease">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <button class="btn btn-sm btn-outline-secondary">-</button>
                                </form>

                                <span class="px-2">@item.Quantity</span>

                                <form method="post" asp-page-handler="Increase">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <button class="btn btn-sm btn-outline-secondary">+</button>
                                </form>
                            </div>
                        </td>

                        <td class="fw-bold">
                            @item.Total.ToString("N0") đ
                        </td>

                        <td>
                            <form method="post" asp-page-handler="Remove">
                                <input type="hidden" name="id" value="@item.ProductId" />
                                <button class="btn btn-sm btn-danger">
                                    ✖
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4>
                Tổng tiền:
                <span class="text-danger fw-bold">
                    @Model.GrandTotal.ToString("N0") đ
                </span>
            </h4>

            <a asp-page="/Checkout/Index" class="btn btn-success btn-lg">
                Thanh toán →
            </a>
        </div>
    }

</div>
