@page
@model Fruit_PRJ.Pages.Checkout.SuccessModel

@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="fa-solid fa-circle-check text-success display-1"></i>
            </div>

            <h2 class="fw-bold text-success mb-3">Đặt hàng thành công!</h2>
            <p class="text-muted mb-4">
                Cảm ơn bạn đã mua sắm tại cửa hàng. <br />
                Đơn hàng của bạn đang được xử lý.
            </p>

            <div class="alert alert-light border mb-4">
                <strong>Mã đơn hàng:</strong>
                <span class="fw-bold text-primary">@Model.OrderCode</span>
            </div>

            @if (Model.PaymentMethod == 2)
            {
                <div class="card bg-light border-warning mb-4">
                    <div class="card-body">
                        <h6 class="fw-bold text-warning"><i class="fa-solid fa-bank me-2"></i>Thông tin chuyển khoản</h6>
                        <p class="small mb-1">Ngân hàng: <strong>Vietcombank</strong></p>
                        <p class="small mb-1">Số TK: <strong>1234567890</strong></p>
                        <p class="small mb-0">Nội dung: <strong>Thanh toan @Model.OrderCode</strong></p>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-center gap-2">
                <a asp-page="/Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-house me-2"></i>Trang chủ
                </a>
                <a asp-page="/Products/Index" class="btn btn-success">
                    <i class="fa-solid fa-cart-plus me-2"></i>Tiếp tục mua hàng
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        window.location.href = '/Index';
    }, 15000); // Chuyển hướng sau 15 giây
</script>