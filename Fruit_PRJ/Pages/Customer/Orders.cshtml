@page
@model Fruit_PRJ.Pages.Customer.OrdersModel
@{
    ViewData["Title"] = "Lịch sử mua hàng";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h3 class="fw-bold mb-4"><i class="fa-solid fa-clock-rotate-left me-2 text-success"></i>Lịch sử đơn hàng</h3>

            @if (!Model.CustomerOrders.Any())
            {
                <div class="text-center py-5 shadow-sm rounded-4 bg-white">
                    <img src="~/images/empty-cart.png" style="width: 150px; opacity: 0.5" alt="Empty">
                    <p class="mt-3 text-muted">Bạn chưa có đơn hàng nào.</p>
                    <a asp-page="/Products/Index" class="btn btn-success rounded-pill px-4">Mua sắm ngay</a>
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm rounded-4 bg-white p-3">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">Mã đơn</th>
                                <th class="border-0">Ngày đặt</th>
                                <th class="border-0">Tổng tiền</th>
                                <th class="border-0 text-center">Trạng thái</th>
                                <th class="border-0 text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.CustomerOrders)
                            {
                                <tr>
                                    <td class="fw-bold text-success">#@order.OrderCode</td>
                                    <td class="small text-muted">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-bold">@order.TotalAmount.ToString("N0") đ</td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill @Model.GetStatusClass(order.Status)">
                                            @Model.GetStatusName(order.Status)
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="/Customer/OrderDetail" asp-route-code="@order.OrderCode"
                                           class="btn btn-outline-success btn-sm rounded-pill px-3">
                                            Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>